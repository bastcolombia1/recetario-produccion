  "description": "Aplicación móvil para control de procesos de producción en centro de producción de La Arepería.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:dev": "cp src/js/config.dev.js src/js/config.js",
    "build:prod": "cp src/js/config.prod.js src/js/config.js",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "android:dev": "npm run build:dev && npm run cap:sync && npm run cap:open:android",
    "android:prod": "npm run build:prod && npm run cap:sync && npm run cap:open:android"
  },
